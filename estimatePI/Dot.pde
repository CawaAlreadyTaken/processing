class Dot {

  float x;
  float y;
  float r;
  boolean hide = true;
  int inside = -1;
  
  Dot (float X, float Y, float R) {
    x = X;
    y = Y;
    r = R;
  }

  //-------------------------------------------------------------------------------------------------------------------------------------------------------------------

  void update() {
    fill(0, 255, 0);
    noStroke();
    ellipse(x, y, r, r);
  }
  
  //-------------------------------------------------------------------------------------------------------------------------------------------------------------------
  
  void show() {
    hide = false;  
  }
  
  //-------------------------------------------------------------------------------------------------------------------------------------------------------------------
  
  void check() {
    if (dist(width/2, height/2, x, y) < min(width/2, height/2)) {
      inside = 1;
    } else {
      inside = 0; 
    }
  }
}
